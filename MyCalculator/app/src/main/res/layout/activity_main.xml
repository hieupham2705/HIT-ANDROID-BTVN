<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="bottom"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:gravity="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
        android:id="@+id/sum"
            android:textColor="#fff"
            android:textSize="50dp"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginVertical="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
            android:id="@+id/ac"
                android:gravity="center"
                android:text="AC"
                android:textSize="40dp"
                android:textColor="@color/black"
                android:background="@drawable/boderxam"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
            android:id="@+id/a17"
                android:gravity="center"
                android:text="+/-"
                android:textSize="40dp"
                android:textColor="@color/black"
                android:background="@drawable/boderxam"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
            android:id="@+id/a16"
                android:gravity="center"
                android:text="%"
                android:textSize="40dp"
                android:textColor="@color/black"
                android:background="@drawable/boderxam"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
            android:id="@+id/a15"
                android:gravity="center"
                android:text="/"
                android:textSize="40dp"
                android:textColor="#ffff"
                android:background="@drawable/boderyelow"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginVertical="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
            android:id="@+id/a7"
                android:gravity="center"
                android:text="7"
                android:textSize="40dp"
                android:textColor="#fff"
                android:background="@drawable/boder"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/a8"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/boder"
                android:gravity="center"
                android:text="8"
                android:textColor="#FFFFFF"
                android:textSize="40dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
            android:id="@+id/a9"
                android:gravity="center"
                android:background="@drawable/boder"
                android:text="9"
                android:textSize="40dp"
                android:textColor="#FFFFFF"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
            android:id="@+id/a14"
                android:gravity="center"
                android:text="x"
                android:textSize="40dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/boderyelow"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginVertical="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
            android:id="@+id/a4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/boder"
                android:gravity="center"
                android:text="4"
                android:textColor="#FFFFFF"
                android:textSize="40dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
            android:id="@+id/a5"
                android:gravity="center"
                android:text="5"
                android:textSize="40dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/boder"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
            android:id="@+id/a6"
                android:gravity="center"
                android:text="6"
                android:textSize="40dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/boder"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
            android:id="@+id/a13"
                android:gravity="center"
                android:text="-"
                android:textSize="40dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/boderyelow"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginVertical="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
            android:id="@+id/a1"
                android:gravity="center"
                android:text="1"
                android:textSize="40dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/boder"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
            android:id="@+id/a2"
                android:gravity="center"
                android:text="2"
                android:textSize="40dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/boder"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
            android:id="@+id/a3"
                android:gravity="center"
                android:text="3"
                android:textSize="40dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/boder"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
            android:id="@+id/a12"
                android:gravity="center"
                android:text="+"
                android:textSize="40dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/boderyelow"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginVertical="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <TextView
                android:id="@+id/a0"
                android:layout_weight="5"
                android:layout_marginHorizontal="12dp"
                android:paddingLeft="30dp"
                android:gravity="left|center"
                android:text="0"
                android:textSize="40dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/boder"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
            android:id="@+id/a10"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/boder"
                android:gravity="center"
                android:text="."
                android:textColor="#FFFFFF"
                android:textSize="40dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/a11"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/boderyelow"
                android:gravity="center"
                android:text="="
                android:textColor="#FFFFFF"
                android:textSize="40dp" />
        </LinearLayout>

    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
</LinearLayout>